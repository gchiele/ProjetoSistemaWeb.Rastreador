@{
    ViewData["Title"] = "Inscrever-se";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Criar uma conta</h3></div>
                                <div class="card-body">
                                    <form method="post" action="\Usuario\NovoUsuario">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputNome" name="usuarioWeb.Nome" type="text" placeholder="Nome Completo" />
                                            <label for="inputNome">Nome Completo</label>
                                            @Html.ValidationMessage("usuarioWeb.Nome")
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputFone" name="usuarioWeb.Fone" type="tel" placeholder="(XX)99999-9999" />
                                            <label for="inputFone">Fone</label>
                                            @Html.ValidationMessage("usuarioWeb.Fone")
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="usuarioWeb.Email" type="email" placeholder="name@example.com" />
                                            <label for="inputEmail">Endereço de Email</label>
                                            @Html.ValidationMessage("usuarioWeb.Email")
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" name="usuarioWeb.Senha" type="password" placeholder="Senha" />
                                                    <label for="inputPassword">Senha</label>
                                                    @Html.ValidationMessage("usuarioWeb.Senha")
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" name="usuarioWeb.ConfirmaSenha" type="password" placeholder="Confirmar Senha" />
                                                    <label for="inputPasswordConfirm">Confirmar Senha</label>
                                                    @Html.ValidationMessage("usuarioWeb.ConfirmaSenha")
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <input class="btn btn-primary" type="submit" value="Criar Conta">
                                            </div>
                                        </div>

                                        @Html.ValidationMessage("Mensagem")
                                        
                                    </form>
                                </div>
                                
                                <div class="card-footer text-center py-3">                  
                                    <div class="small"><a>@Html.ActionLink("Ter uma conta? Ir para login", "Index")</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>