@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor;
@model UsuarioEditarModel;

@{
    ViewData["Title"] = "Minha Conta";
}


<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <h3 class="navbar-brand ps-3">GChiele Automação</h3>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0 invisible">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Procurar..." aria-label="Procurar..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Minha Conta</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Minha Conta</div>
                        <a class="nav-link" href="/Dispositivo/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-angle-left"></i></div>
                            Voltar
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logado como:</div>
                    @httpContextAccessor.HttpContext.Session.GetString("NomeUsuario")
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-5 border-dark rounded-lg mt-5 ">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Minha Conta</h3></div>
                                <div class="card-body">
                                    <form method="post" action="\Usuario\SalvarConta">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputNome" name="usuarioWeb.Nome" type="text" value="@{@Model.Nome}" placeholder="Nome Completo" />
                                            <label for="inputNome">Nome Completo</label>
                                            @Html.ValidationMessage("usuarioWeb.Nome")
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputFone" name="usuarioWeb.Fone" type="tel" value="@{@Model.Fone}" placeholder="(XX)99999-9999" />
                                            <label for="inputFone">Fone</label>
                                            @Html.ValidationMessage("usuarioWeb.Fone")
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="usuarioWeb.Email" type="email" value="@{@Model.Email}" placeholder="name@example.com" />
                                            <label for="inputEmail">Endereço de Email</label>
                                            @Html.ValidationMessage("usuarioWeb.Email")
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputSenhaAtual" name="usuarioWeb.SenhaAtual" type="password" placeholder="Senha" />
                                            <label for="inputSenhaAtual">Senha Atual</label>
                                            @Html.ValidationMessage("usuarioWeb.SenhaAtual")
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" name="usuarioWeb.NovaSenha" type="password" placeholder="Nova Senha" />
                                                    <label for="inputPassword">Nova Senha</label>
                                                    @Html.ValidationMessage("usuarioWeb.NovaSenha")
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" name="usuarioWeb.ConfirmaNovaSenha" type="password" placeholder="Confirmar Nova Senha" />
                                                    <label for="inputPasswordConfirm">Confirmar Nova Senha</label>
                                                    @Html.ValidationMessage("usuarioWeb.ConfirmaNovaSenha")
                                                </div>
                                            </div>
                                        </div>
                                        <input name="usuarioWeb.Id" value="@{@Model.Id}" type="hidden" />

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <input class="btn btn-primary" type="submit" value="Salvar Dados">
                                            </div>
                                        </div>

                                        @Html.ValidationMessage("Mensagem")
                                        
                                    </form>      
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>


